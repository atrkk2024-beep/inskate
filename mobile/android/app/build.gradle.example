// Пример конфигурации для сборки APK
// Скопируйте нужные настройки в ваш build.gradle

android {
    // ...
    
    defaultConfig {
        applicationId "com.inskate.app"
        minSdkVersion 21
        targetSdkVersion 34
        versionCode 1
        versionName "2.0.0"
    }
    
    signingConfigs {
        release {
            // Для release сборки нужен keystore
            // Создайте его командой:
            // keytool -genkey -v -keystore inskate-release.keystore -alias inskate -keyalg RSA -keysize 2048 -validity 10000
            
            storeFile file("inskate-release.keystore")
            storePassword System.getenv("KEYSTORE_PASSWORD") ?: "your-password"
            keyAlias "inskate"
            keyPassword System.getenv("KEY_PASSWORD") ?: "your-password"
        }
    }
    
    buildTypes {
        release {
            signingConfig signingConfigs.release
            minifyEnabled true
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }
    
    // Для указания API URL при сборке:
    // flutter build apk --dart-define=API_URL=https://your-api.vercel.app/api
}

